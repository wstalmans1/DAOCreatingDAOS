{
  "name": "dao-creating-daos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:root:local": "hardhat run scripts/deployRoot.ts --network localhost",
    "deploy:root:sepolia": "hardhat run scripts/deployRoot.ts --network sepolia",
    "circle:create:local": "hardhat run scripts/proposeChild.ts --network localhost",
    "circle:create:sepolia": "hardhat run scripts/proposeChild.ts --network sepolia",
    "circle:create-under:local": "PARENT_ID=1 hardhat run scripts/proposeChildUnder.ts --network localhost",
    "circle:create-under:sepolia": "PARENT_ID=1 hardhat run scripts/proposeChildUnder.ts --network sepolia",
    "circle:list:local": "hardhat run scripts/listCircles.ts --network localhost",
    "circle:list:sepolia": "hardhat run scripts/listCircles.ts --network sepolia",
    "votes:grant-quorum": "node scripts/grantQuorumVotes.cjs",
    "verify": "node scripts/verify.js",
    "verify:sepolia": "node scripts/verify.js --network sepolia",
    "env:update:local": "node scripts/updateEnvFromDeploy.cjs localhost",
    "deploy:root:1155:local": "node scripts/deployRoot1155.cjs && node scripts/updateEnvFromDeploy.cjs localhost"
  },
  "dependencies": {
    "@wagmi/connectors": "^4.1.25",
    "@rainbow-me/rainbowkit": "2.0.0",
    "@tanstack/react-query": "^5.85.5",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.20.0",
    "util": "^0.12.5",
    "viem": "^2.7.6",
    "wagmi": "2.5.0",
    "zustand": "4.4.7",
    "d3-hierarchy": "^3.1.2",
    "d3-shape": "^3.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/node": "24.3.0",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.16",
    "dotenv": "^16.4.5",
    "eslint": "8.57.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "vite-plugin-eslint": "^1.8.1",
    "@nomicfoundation/hardhat-viem": "^2.0.7",
    "hardhat": "^2.26.1",
    "postcss": "8.4.32",
    "tailwindcss": "3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3",
    "vite": "5.4.19"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{js,css,md,json,mdx}": [
      "prettier --write"
    ]
  },
  "tsconfigs": {
    "hardhat": "tsconfig.hardhat.json"
  }
}
