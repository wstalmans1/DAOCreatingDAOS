# Backend (Hardhat) — used only by Node/Hardhat. Do NOT prefix with VITE_.
# Copy this section into a file named `.env` at the project root.

# Required for deployments and scripts (keep secure!)
PRIVATE_KEY=

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# RPC configuration (choose one approach)
# Option A: Set a full RPC URL
SEPOLIA_RPC_URL=
# Option B: Set an Alchemy API key (the config will build the URL)
ALCHEMY_API_KEY=


# Frontend (Vite) — exposed to the browser. MUST be prefixed with VITE_.
# Copy this section into a file named `.env.local` at the project root.

# WalletConnect (from WalletConnect Cloud)
VITE_WALLETCONNECT_PROJECT_ID=

# Alchemy API key for frontend clients (used by Wagmi/Viem)
VITE_ALCHEMY_API_KEY=

# Chain configuration
VITE_CHAIN_ID=11155111

# Optional: Explicit RPC URL for frontend
VITE_SEPOLIA_RPC_URL=

# After deployment, set your token address here so the UI can read it
VITE_MY_TOKEN_ADDRESS=

